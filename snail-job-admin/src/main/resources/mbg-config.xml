<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <!--
    defaultModelType:
    这个属性定义 MyBatisGenerator 如何生成 Model 对象
    这个属性在 MyBatis3DynamicSql、MyBatis3Kotlin、MyBatis3Simple 中被忽略掉，只在 MyBatis3 运行环境中生效
        conditional: blob 类型的字段大于 1 个才会生成 XXXWithBlob 的子类
        flat: 任何时候都不会生成 XXXWithBlob 的子类
        hierarchical: 只要有 blob 类型的就会生成一个 XXXWithBlob 的子类了

    targetRuntime:
        MyBatis3DynamicSql: 默认值, 使用了 Mybatis 的动态 SQL
        MyBatis3Kotlin: 生成 Kotlin 代码
        MyBatis3: 生成带有 XXXExample 的代码和 XXX.xml 文件
        MyBatis3Simple: 不生成带有 XXXExample 的代码
    -->
    <context id="default" targetRuntime="MyBatis3DynamicSql">
        <!-- 属性配置 -->
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <property name="javaFileEncoding" value="UTF-8"/>

        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
<!--            <property name="suppressDate" value="true"/>-->
<!--            <property name="addRemarkComments" value="true"/>-->
        </commentGenerator>

        <!-- 数据库连接 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/snail_job?useSSL=false"
                        userId="root"
                        password="admin">
        </jdbcConnection>

        <javaTypeResolver>
            <!--
                true：使用BigDecimal对应DECIMAL和 NUMERIC数据类型
                false：默认,
                    scale>0;length>18：使用BigDecimal;
                    scale=0;length[10,18]：使用Long；
                    scale=0;length[5,9]：使用Integer；
                    scale=0;length<5：使用Short；
             -->
            <property name="forceBigDecimals" value="true"/>
        </javaTypeResolver>

        <!-- Model -->
        <javaModelGenerator targetPackage="com.snailwu.job.admin.core.model"
                            targetProject="snail-job-admin/src/main/java">
<!--            <property name="trimStrings" value="true"/>-->
        </javaModelGenerator>

        <!-- Mapper -->
        <javaClientGenerator targetPackage="com.snailwu.job.admin.dao"
                             targetProject="snail-job-admin/src/main/java">
        </javaClientGenerator>

        <!-- Tables -->
        <table tableName="snail_job_group" domainObjectName="SnailJobGroup"/>
        <table tableName="snail_job_info" domainObjectName="SnailJobInfo"/>
        <table tableName="snail_job_lock" domainObjectName="SnailJobLock"/>
        <table tableName="snail_job_registry" domainObjectName="SnailJobRegistry"/>

    </context>
</generatorConfiguration>