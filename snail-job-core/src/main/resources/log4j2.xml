<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="baseConf" status="info" monitorInterval="30">

    <appenders>
        <Console name="Console">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </Console>
    </appenders>

    <loggers>
        <root level="info">
            <AppenderRef ref="Console"/>
        </root>
    </loggers>

</Configuration>